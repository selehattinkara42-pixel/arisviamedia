generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SiteSettings {
  id             Int         @id @default(1)
  logoUrl        String?
  favicon        String?
  seoTitle       String?
  seoDescription String?
  globalCss      String?     @db.Text
  siteName       String      @default("Aris Via Media")
  contactEmail   String      @default("info@arisvia.com")
  adminPassword  String?     // Hashed password
  updatedAt      DateTime    @updatedAt
  logoConfig     LogoConfig?
}

model LogoConfig {
  id           Int          @id @default(autoincrement())
  width        Float        @default(150)
  height       Float        @default(50)
  x            Float        @default(20)
  y            Float        @default(20)
  visibility   String[]
  siteSettings SiteSettings @relation(fields: [settingsId], references: [id])
  settingsId   Int          @unique
}

model Portfolio {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  mediaUrl    String
  coverUrl    String?  // Video kapak görseli veya alternatif görsel
  category    String
  order       Int      @default(0)
  isVisible   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Package {
  id        Int      @id @default(autoincrement())
  name      String
  price     Decimal  @db.Decimal(10, 2)
  features  String[]
  badge     String?
  isVisible Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Testimonial {
  id        Int      @id @default(autoincrement())
  name      String
  role      String
  company   String
  content   String   @db.Text
  avatarUrl String?
  rating    Int      @default(5)
  isVisible Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactSubmission {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String?
  message   String   @db.Text
  status    String   @default("UNREAD") // UNREAD, READ, ARCHIVED
  createdAt DateTime @default(now())
}

model SectionConfig {
  id        String   @id // e.g., "home-hero", "home-portfolio"
  name      String   // Display name
  isVisible Boolean  @default(true)
  order     Int      @default(0)
  updatedAt DateTime @updatedAt
}

// Eski basit model yerine yenisi PageContent kullanilacak
model DynamicContent {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  updatedAt DateTime @updatedAt
}

model PageContent {
  id          Int      @id @default(autoincrement())
  key         String   @unique // kod icinde kullanilacak ID (orn: home_hero_title)
  content     String   @db.Text
  fontSize    String   @default("base") // sm, base, lg, xl, 2xl, 3xl...
  page        String   // Gruplama icin: home, services, contact, global
  section     String   // Alt gruplama: hero, about, features
  label       String   // Admin panelde görünecek isim: "Anasayfa Büyük Başlık"
  updatedAt   DateTime @updatedAt
}

model HeroCard {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  icon        String   @default("Zap") // Lucide icon name
  iconColor   String   @default("#D4AF37") // Hex color
  order       Int      @default(0)
  isVisible   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Reference {
  id          Int      @id @default(autoincrement())
  name        String   // Marka adı
  logoUrl     String?  // Logo görseli URL
  websiteUrl  String?  // Marka websitesi
  description String?  // Kısa açıklama
  category    String   @default("Marka") // Marka, Ajans, Kurum vs.
  order       Int      @default(0)
  isVisible   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
